# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md
include CODE_OF_CONDUCT.md
include .env.example

# Include source code
recursive-include revenium_middleware_anthropic *.py

# Include examples
recursive-include examples *.py *.md

# Exclude tests
recursive-exclude tests *
exclude test_*.py
exclude *_debug.py

# Exclude development files
recursive-exclude .claude *
recursive-exclude repo-plans *
exclude *.sh

# Exclude security artifacts
exclude *.sbom.*
exclude gitleaks-report*.json

# Exclude logs
exclude *.log
global-exclude *.log

# Exclude Python cache and compiled files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude temporary test directories
exclude my-*-test

